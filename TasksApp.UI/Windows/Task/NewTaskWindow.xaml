<Window x:Class="TasksApp.UI.Windows.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksApp.UI.Windows"
        mc:Ignorable="d"
        Title="NewTaskWindow" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>

        <Label>Task text</Label>

        <ComboBox x:Name="projectsComboBox" Grid.Column="1"/>

        <TextBox Grid.Row="1" Grid.ColumnSpan="2" x:Name="taskTextBox"/>
        <Label Grid.Row="2" Grid.ColumnSpan="2">DueTo (Date)</Label>
        <TextBox Grid.Row="3" Grid.ColumnSpan="2" x:Name="dueToTextBox"/>

        <CheckBox Grid.Row="4" Grid.ColumnSpan="2" x:Name="timeBlockedCheckBox" Content="Time blocked" IsChecked="False" Checked="timeBlockedCheckBox_Changed" Unchecked="timeBlockedCheckBox_Changed"/>

        <Label Grid.Row="5">Start Time</Label>
        <TextBox Grid.Row="6" x:Name="startTimeTextBox" IsEnabled="False" Text="00:00"/>

        <Label Grid.Row="5" Grid.Column="1">End Time</Label>
        <TextBox Grid.Row="6" Grid.Column="1" IsEnabled="False" x:Name="endTimeTextBox" Text="00:00"/>
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Width="60" x:Name="createBtn" Click="createBtn_Click">Create</Button>
            <Button Width="60" x:Name="cancelBtn">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
