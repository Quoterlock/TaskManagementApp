<Window x:Class="TasksApp.UI.Windows.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksApp.UI.Windows"
        mc:Ignorable="d"
        Title="NewTaskWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Text</Label>
            <TextBox x:Name="taskTextBox"/>
            <Label>DueTo (Date)</Label>
            <TextBox x:Name="dueToTextBox"/>
            <Label>Start Time</Label>
            <TextBox x:Name="startTimeTextBox"/>
            <Label>End Time</Label>
            <TextBox x:Name="endTimeTextBox"/>
            <Button x:Name="createBtn" Click="createBtn_Click">Create</Button>
            <Button x:Name="cancelBtn">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
