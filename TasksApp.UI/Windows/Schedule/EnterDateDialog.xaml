<Window x:Class="TasksApp.UI.Windows.Schedule.EnterDateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksApp.UI.Windows.Schedule"
        mc:Ignorable="d"
        Title="EnterDateDialog" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="messageTextBlock" Grid.ColumnSpan="2" TextWrapping="Wrap" TextAlignment="Center"/>
        <TextBox x:Name="dateTextBox" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button x:Name="confirmBtn" Grid.Row="3" Click="confirmBtn_Click">Confirm</Button>
        <Button x:Name="cancelBtn" Grid.Row="3" Grid.Column="1">Cancel</Button>
    </Grid>
</Window>
