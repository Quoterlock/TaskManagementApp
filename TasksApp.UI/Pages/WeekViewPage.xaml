<Page x:Class="TasksApp.UI.Pages.WeekViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TasksApp.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WeekViewPage">

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled">
            <Canvas x:Name="mainCanvas" SizeChanged="mainCanvas_SizeChanged"/>
        </ScrollViewer>
        <Button Width="100" Height="28" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click">Refresh</Button>
    </Grid>
</Page>
